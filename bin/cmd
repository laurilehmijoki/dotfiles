#!/bin/bash -e

action=$1
filename=$2
bin=~/bin

usage() {
  echo "Usage: `basename $0` (le|e) script"
  exit 2
}

ensureScriptExistsAndIsExecutable() {
  if [ ! -f $1 ]; then
    touch $1
    chmod +x $1
    echo "#!/bin/bash -e" >> $1
    echo "" >> $1
  fi
}

edit() {
  ensureScriptExistsAndIsExecutable $1
  vim $1
}

case "$action" in
  ledit|le)
    script_root=$bin/local
    ;;
  edit|e)
    script_root=$bin
    ;;
esac

script=$script_root/$filename

case "$action" in
  ledit|le)
    edit $script
    ;;
  edit|e)
    edit $script
    ;;
  *)
    echo Unknown action $action
    usage
    ;;
esac
