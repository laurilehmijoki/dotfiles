#!/bin/bash

if [ -z $1 -a -z $2 ]; then
  echo "Usage: echo-sutras <pada> [<start> [<end>]]"
  echo ""
  echo "Example: 'echo-sutras 2 1 5' will print the sutras 1â€“5 from the second chapter"
  exit 1
fi

pada=$1
start=$2
end=$3

if [ -z $start ]; then
  start=1
fi
if [ -z $end ]; then
  end=99
fi

echo -e "\033[1m$(sed -n "${start},${end}p" ~/.yogasutras/yoga-sutra-patanjali-$pada)\033[0m"
